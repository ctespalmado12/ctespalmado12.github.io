<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Portfolio • Your Name</title>
  <meta name="description" content="Personal portfolio of Your Name — projects, skills, and contact." />
  <meta name="color-scheme" content="light dark" />
  <meta property="og:title" content="Your Name — Portfolio" />
  <meta property="og:description" content="Projects, skills, and ways to reach me." />
  <meta property="og:type" content="website" />
  <meta name="theme-color" content="#0ea5e9" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet">
  <style>
    :root{
      --bg: #0b1220;
      --panel: #0f172a;
      --text: #e2e8f0;
      --muted: #94a3b8;
      --brand: #22d3ee; /* cyan-400 */
      --brand-ink: #0ea5e9; /* sky-500 */
      --ring: 0 0 0 3px rgba(34,211,238,.35);
    }
    :root.light{
      --bg: #f8fafc;
      --panel: #ffffff;
      --text: #0f172a;
      --muted: #475569;
      --brand: #0ea5e9; /* sky-500 */
      --brand-ink: #0284c7; /* sky-600 */
    }
    html,body{height:100%}
    *{box-sizing:border-box}
    body{
      margin:0; font-family:Inter, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans", "Apple Color Emoji","Segoe UI Emoji";
      background: radial-gradient(1200px 800px at 80% -10%, rgba(56,189,248,.08), transparent 60%),
                  radial-gradient(1000px 600px at -10% 20%, rgba(6,182,212,.12), transparent 55%),
                  var(--bg);
      color:var(--text);
      line-height:1.6;
      scroll-behavior:smooth;
    }
    a{color:var(--brand-ink); text-decoration:none}
    a:hover{opacity:.9}
    .container{max-width:1100px; margin:0 auto; padding:0 1.2rem}
    .nav{
      position:sticky; top:0; z-index:50; backdrop-filter:saturate(180%) blur(10px);
      background: color-mix(in oklab, var(--bg) 90%, transparent);
      border-bottom:1px solid color-mix(in oklab, var(--text) 12%, transparent);
    }
    .nav-inner{display:flex; align-items:center; justify-content:space-between; padding:.85rem 0}
    .brand{display:flex; gap:.6rem; align-items:center; font-weight:800; letter-spacing:.4px}
    .brand-badge{width:28px; height:28px; border-radius:10px; background:linear-gradient(135deg, var(--brand), var(--brand-ink)); display:grid; place-items:center; box-shadow:0 8px 24px rgba(14,165,233,.35)}
    .brand-badge svg{width:18px; height:18px; color:white}
    .nav ul{display:flex; gap:1.2rem; list-style:none; margin:0; padding:0}
    .nav a{color:var(--text); opacity:.85; font-weight:600}
    .nav a.active{color:var(--brand);}
    .controls{display:flex; align-items:center; gap:.5rem}
    .btn{display:inline-flex; gap:.45rem; align-items:center; padding:.6rem .9rem; border-radius:999px; border:1px solid color-mix(in oklab, var(--text) 12%, transparent); background:color-mix(in oklab, var(--panel) 90%, transparent); color:var(--text); font-weight:600}
    .btn:hover{box-shadow:var(--ring)}
    .hero{padding:6rem 0 4rem;}
    .hero-grid{display:grid; grid-template-columns: 1.3fr .8fr; gap:3rem; align-items:center}
    .kicker{display:inline-block; padding:.25rem .6rem; border-radius:999px; border:1px solid color-mix(in oklab, var(--text) 14%, transparent); font-size:.8rem; color:var(--muted)}
    h1{font-size:clamp(2rem, 3.6vw + 1rem, 3.4rem); line-height:1.1; margin:.8rem 0 1rem;}
    .lead{font-size:1.08rem; color:var(--muted); max-width:55ch}
    .hero-cta{display:flex; gap:.8rem; margin-top:1.4rem}
    .card{background:linear-gradient(180deg, color-mix(in oklab, var(--panel) 90%, transparent), color-mix(in oklab, var(--panel) 95%, transparent)); border:1px solid color-mix(in oklab, var(--text) 12%, transparent); border-radius:22px; padding:1.1rem}
    .shadow{box-shadow:0 10px 30px rgba(2,8,23,.25)}
    .grid{display:grid; gap:1rem}
    .projects{padding:2rem 0 1rem}
    .section-title{font-size:1.6rem; margin:2.5rem 0 1rem}
    .project-grid{display:grid; grid-template-columns:repeat(3,1fr); gap:1rem}
    .project{position:relative; overflow:hidden}
    .project h3{margin:.6rem 0 .2rem}
    .project p{color:var(--muted); font-size:.96rem}
    .tags{display:flex; flex-wrap:wrap; gap:.5rem; margin-top:.6rem}
    .tag{font-size:.74rem; padding:.2rem .5rem; border-radius:999px; border:1px solid color-mix(in oklab, var(--text) 16%, transparent); color:var(--muted)}
    .skills{padding:1rem 0 0}
    .skill-badges{display:flex; flex-wrap:wrap; gap:.5rem}
    .resume{display:grid; grid-template-columns:1fr 1fr; gap:1rem}
    .timeline{border-left:2px solid color-mix(in oklab, var(--text) 16%, transparent); padding-left:1rem;}
    .timeline .row{margin-bottom:1rem}
    .timeline .row h4{margin:.1rem 0}
    .contact{padding:2rem 0 4rem}
    form{display:grid; gap:.8rem}
    input, textarea{
      width:100%; padding:.9rem 1rem; border-radius:14px; border:1px solid color-mix(in oklab, var(--text) 14%, transparent);
      background:color-mix(in oklab, var(--panel) 92%, transparent); color:var(--text); outline:none;
    }
    input:focus, textarea:focus{box-shadow:var(--ring)}
    textarea{min-height:140px; resize:vertical}
    .footer{padding:2rem 0; color:var(--muted); border-top:1px solid color-mix(in oklab, var(--text) 12%, transparent)}
    .avatar{width:180px; aspect-ratio:1/1; border-radius:24px; overflow:hidden; border:3px solid color-mix(in oklab, var(--brand) 60%, transparent)}
    .avatar img{width:100%; height:100%; object-fit:cover}
    @media (max-width: 960px){
      .hero-grid{grid-template-columns:1fr; text-align:center}
      .hero-cta{justify-content:center}
      .project-grid{grid-template-columns:1fr 1fr}
      .resume{grid-template-columns:1fr}
    }
    @media (max-width: 640px){
      .project-grid{grid-template-columns:1fr}
      .nav ul{display:none}
    }
  </style>
</head>
<body>
<header class="nav">
  <div class="container nav-inner">
    <a href="#home" class="brand" aria-label="Go to home">
      <span class="brand-badge" aria-hidden="true">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87L18.18 22 12 18.56 5.82 22 7 14.14l-5-4.87 6.91-1.01L12 2z"/>
        </svg>
      </span>
      <span>Your Name</span>
    </a>
    <nav aria-label="Primary">
      <ul>
        <li><a href="#projects">Projects</a></li>
        <li><a href="#skills">Skills</a></li>
        <li><a href="#about">About</a></li>
        <li><a href="#contact">Contact</a></li>
      </ul>
    </nav>
    <div class="controls">
      <button id="themeToggle" class="btn" aria-label="Toggle dark mode" title="Toggle dark mode">
        <svg id="sun" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="currentColor" aria-hidden="true"><path d="M6.76 4.84l-1.8-1.79-1.41 1.41 1.79 1.8 1.42-1.42zm10.48 0l1.79-1.8 1.41 1.41-1.8 1.79-1.4-1.4zM12 4V1h-0v3h0zm0 19v-3h0v3h0zM4 12H1v0h3v0zm19 0h-3v0h3v0zM6.76 19.16l-1.42 1.42-1.79-1.8 1.41-1.41 1.8 1.79zm12.69-1.79l1.41 1.41-1.79 1.8-1.42-1.42 1.8-1.79z"/><circle cx="12" cy="12" r="5"/></svg>
        <svg id="moon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="currentColor" aria-hidden="true" style="display:none"><path d="M21 12.79A9 9 0 1 1 11.21 3a7 7 0 0 0 9.79 9.79z"/></svg>
        <span id="themeLabel">Dark</span>
      </button>
      <a class="btn" href="#contact">Say hello</a>
    </div>
  </div>
</header>

<main id="home" class="container">
  <section class="hero">
    <div class="hero-grid">
      <div>
        <span class="kicker">Full‑Stack Developer • PHP / Laravel • JS</span>
        <h1>Build reliable web apps with clean code & delightful UX.</h1>
        <p class="lead">I solve business problems with pragmatic engineering. My stack centers on <strong>PHP/Laravel</strong>, <strong>MySQL</strong>, and modern <strong>JavaScript</strong>. Below are selected projects and the tools I use daily.</p>
        <div class="hero-cta">
          <a class="btn" href="#projects">View projects</a>
          <a class="btn" href="#resume" download>Download résumé</a>
        </div>
      </div>
      <div class="card shadow" aria-label="Profile photo and quick facts">
        <div style="display:flex; gap:1rem; align-items:center;">
          <figure class="avatar" aria-hidden="true">
            <img src="https://images.unsplash.com/photo-1544005313-94ddf0286df2?q=80&w=600&auto=format&fit=crop" alt="" />
          </figure>
          <div>
            <h3 style="margin:0">Your Name</h3>
            <p style="margin:.2rem 0; color:var(--muted)">Based in PH • Open to freelance</p>
            <p style="margin:.4rem 0 0; display:flex; gap:.5rem; flex-wrap:wrap">
              <span class="tag">Laravel</span>
              <span class="tag">MySQL</span>
              <span class="tag">Livewire</span>
              <span class="tag">DOMPDF</span>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="projects" class="projects">
    <h2 class="section-title">Featured Projects</h2>
    <div class="project-grid">
      <article class="card project shadow">
        <div class="tag" aria-label="project type">Full‑stack</div>
        <h3>HRIS & Timekeeping Suite</h3>
        <p>End‑to‑end HRIS with biometric ingestion, leave workflows, and PDF reporting (Pag‑IBIG, PhilHealth, RF‑1). Optimized multi‑CTE stored procedures and batch DTR processing.</p>
        <div class="tags">
          <span class="tag">Laravel</span><span class="tag">MySQL</span><span class="tag">WebSockets</span><span class="tag">DOMPDF</span>
        </div>
        <p style="margin-top:.6rem"><a href="#">Case study →</a></p>
      </article>
      <article class="card project">
        <div class="tag">API</div>
        <h3>Leave API Gateway</h3>
        <p>Secure API with key‑based auth and throttling, powering third‑party integrations. Reduced error rates and improved request handling with batching & caching.</p>
        <div class="tags">
          <span class="tag">Laravel</span><span class="tag">Rate limit</span><span class="tag">Redis</span>
        </div>
        <p style="margin-top:.6rem"><a href="#">Source code →</a></p>
      </article>
      <article class="card project">
        <div class="tag">Frontend</div>
        <h3>Portfolio SPA</h3>
        <p>Responsive single‑page portfolio with accessible components, dark mode, and smooth navigation. Built with semantic HTML and tiny vanilla JS.</p>
        <div class="tags">
          <span class="tag">HTML</span><span class="tag">CSS</span><span class="tag">JS</span>
        </div>
        <p style="margin-top:.6rem"><a href="#">Live demo →</a></p>
      </article>
    </div>
  </section>

  <section id="skills" class="skills">
    <h2 class="section-title">Skills</h2>
    <div class="card">
      <div class="skill-badges">
        <span class="tag">PHP • Laravel</span>
        <span class="tag">MySQL • Stored Procedures</span>
        <span class="tag">JavaScript • jQuery • Livewire</span>
        <span class="tag">REST APIs • OAuth2</span>
        <span class="tag">Queues • Caching</span>
        <span class="tag">Tailwind • Blade</span>
        <span class="tag">DOMPDF • Reporting</span>
        <span class="tag">Git • CI/CD</span>
      </div>
    </div>
  </section>

  <section id="about" class="projects">
    <h2 class="section-title">About</h2>
    <div class="card">
      <p>I'm a developer focused on pragmatic solutions and maintainable systems. I enjoy optimizing SQL, shaping clean APIs, and polishing UI details. Outside of work, I tinker with automation and document hard‑won learnings.</p>
    </div>
  </section>

  <section id="resume" class="projects">
    <h2 class="section-title">Experience</h2>
    <div class="resume">
      <div class="card timeline">
        <div class="row">
          <h4>Software Developer • One Document Corp</h4>
          <small style="color:var(--muted)">Oct 2023 — Present</small>
          <p>Lead backend for HRIS modules, migrated legacy reports to web PDFs, and handled biometric device integrations and on‑site deployments.</p>
        </div>
        <div class="row">
          <h4>Freelance Projects</h4>
          <small style="color:var(--muted)">2022 — Present</small>
          <p>Built small business sites and internal dashboards with Laravel + Alpine/Livewire.</p>
        </div>
      </div>
      <aside class="card">
        <h3 style="margin-top:0">Highlights</h3>
        <ul>
          <li>Cut monthly DTR processing from minutes to seconds via batching.</li>
          <li>Implemented PDF pagination & precise totals for PhilHealth & Pag‑IBIG forms.</li>
          <li>Hardened API with auth keys, throttling, and observability.</li>
        </ul>
        <div style="margin-top:1rem"><a class="btn" href="#">Download full résumé</a></div>
      </aside>
    </div>
  </section>

  <section id="contact" class="contact">
    <h2 class="section-title">Contact</h2>
    <div class="card">
      <form onsubmit="event.preventDefault(); alert('Thanks! I will get back to you soon.'); this.reset();">
        <div class="grid" style="grid-template-columns:1fr 1fr; gap:.8rem">
          <label>
            <span class="tag" style="display:inline-block; margin-bottom:.35rem">Name</span>
            <input required placeholder="Your name" />
          </label>
          <label>
            <span class="tag" style="display:inline-block; margin-bottom:.35rem">Email</span>
            <input type="email" required placeholder="you@example.com" />
          </label>
        </div>
        <label>
          <span class="tag" style="display:inline-block; margin-bottom:.35rem">Message</span>
          <textarea required placeholder="Tell me about your project..."></textarea>
        </label>
        <button class="btn" type="submit">Send message</button>
      </form>
    </div>
  </section>
</main>

<footer class="footer">
  <div class="container" style="display:flex; justify-content:space-between; gap:1rem; flex-wrap:wrap">
    <span>© <span id="year"></span> Your Name</span>
    <span><a href="#home">Back to top ↑</a></span>
  </div>
</footer>

<script>
  // Theme toggle with prefers-color-scheme + localStorage
  const root = document.documentElement;
  const savedTheme = localStorage.getItem('theme');
  const prefersLight = window.matchMedia('(prefers-color-scheme: light)').matches;
  if (savedTheme === 'light' || (!savedTheme && prefersLight)) {
    root.classList.add('light');
  }
  function syncThemeLabel(){
    const light = root.classList.contains('light');
    document.getElementById('themeLabel').textContent = light ? 'Light' : 'Dark';
    document.getElementById('sun').style.display = light ? 'none' : '';
    document.getElementById('moon').style.display = light ? '' : 'none';
  }
  syncThemeLabel();
  document.getElementById('themeToggle').addEventListener('click', () => {
    root.classList.toggle('light');
    const mode = root.classList.contains('light') ? 'light' : 'dark';
    localStorage.setItem('theme', mode);
    syncThemeLabel();
  });

  // Active nav link highlight
  const sections = ['projects','skills','about','contact'];
  const options = { rootMargin: '-40% 0px -55% 0px', threshold: 0 };
  const observer = new IntersectionObserver((entries)=>{
    entries.forEach(entry => {
      const id = entry.target.id;
      const link = document.querySelector(`.nav a[href="#${id}"]`);
      if (!link) return;
      if (entry.isIntersecting) {
        document.querySelectorAll('.nav a').forEach(a => a.classList.remove('active'));
        link.classList.add('active');
      }
    })
  }, options);
  sections.forEach(id=>{ const el = document.getElementById(id); if(el) observer.observe(el); });

  // Current year
  document.getElementById('year').textContent = new Date().getFullYear();
</script>
</body>
</html>
